<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_2"
    android:layout_marginTop="@dimen/space_between_content_areas_8"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.softdesign.devintensive.ui.view.AspectRatioImageView
                android:id="@+id/user_photo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arni"
                android:scaleType="centerCrop"
                app:aspect_ratio="1.78"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_full_name_txt"
                android:text="Фамилия Имя"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_small_24"
                android:paddingLeft="@dimen/horizontal_margins_on_mobile_16"
                android:paddingRight="@dimen/horizontal_margins_on_mobile_16"
                android:paddingBottom="@dimen/size_small_24"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/undo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_undo"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="end|bottom"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                />
        </FrameLayout>

            <LinearLayout
                android:id="@+id/info_panel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/content_left_margin_from_screen_edge_72"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/rating_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_20"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Рейтинг"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_14"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/code_lines_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_20"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Написано строк кода"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_14"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/projects_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_20"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проектов"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/textSize_14"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bio_txt"
            android:textColor="@color/grey_light"
            android:text="@string/about_me"
            android:maxLines="3"
            android:paddingRight="@dimen/horizontal_margins_on_mobile_16"
            android:paddingLeft="@dimen/horizontal_margins_on_mobile_16"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/textSize_14"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"
            android:layout_marginTop="@dimen/horizontal_margins_on_mobile_16"
            android:layout_marginBottom="@dimen/space_between_content_areas_8"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/more_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Просмотр"
            android:textColor="@color/color_accent"
            android:paddingLeft="@dimen/horizontal_margins_on_mobile_16"
            android:paddingRight="@dimen/horizontal_margins_on_mobile_16"/>

    </LinearLayout>

</android.support.v7.widget.CardView>