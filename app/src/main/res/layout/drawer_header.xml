<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"

    android:paddingTop="@dimen/card_left_and_right_padding_24"
    android:paddingLeft="@dimen/horizontal_margins_on_mobile_16"
    android:paddingRight="@dimen/horizontal_margins_on_mobile_16"
    android:paddingBottom="@dimen/space_between_content_areas_8"
    android:background="@drawable/header_bg"
    android:fitsSystemWindows="true">
    <ImageView
        android:id="@+id/avatar_img"
        android:src="@drawable/arni"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/screen_edge_left_and_right_margins_16"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_right_margin_56"

        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Алёна Мальчихина"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"/>
        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="myEmail"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

</RelativeLayout>